<div class="row">
    <div class="col-lg-0 col-md-1 col-sm-0"></div>
    <div class="col-lg-12 col-md-10 col-sm-12">
    <div class="row">
    <% @spots.each do |spot| %>
      <div class="col-lg-4 col-md-6 col-sm-6">
        <%= link_to(spot_path(spot), class: '') do %>
        <div class="box">


        <div class="text-center"><%= attachment_image_tag(spot, :image, 
        :fill, 1000, 709, fallback: "noimage.jpg",size:'325x230', class:'img') %>
        </div>


        <h3>
        <%= spot.name %>
        </h3>
        
        </div>
        <% end %>
      </div>
    <% end %>
    </div>
    </div>
</div>
<%= paginate @spots, class: "paginate" %>