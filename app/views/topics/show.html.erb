<h1 class="headline"><%= @topic.title %></h1>
  <p>トピック投稿者 <%=@topic.customer.nickname%></p>

<div class="row">
  <div class="col-md-2"></div>

    <div class="col-md-7">

  <% @posts.each_with_index do |post , idx| %>
    
    <p>
      <%= idx + 1 %>. <%= link_to post.customer.nickname, customer_path(post.customer_id)  %> : <%= post.body %>
    </p>

  <% if post.customer == current_customer %>
    <%= link_to '[削除]', post_destroy_path(post), method: :delete, data: {confirm: "削除してもよろしいですか？"} %>
  <% end %>

  <% if admin_signed_in? %>
    <%= link_to '[削除]', post_destroy_path(post), method: :delete, data: {confirm: "削除してもよろしいですか？"} %>
  <% end %>

<% end %>

    </div>

  <div class="col-md-3">
    <div class="box">
      
  <% if customer_signed_in? %>
    <%= form_with model: @post, :url => post_create_path, local: true do |f| %>
      <%= render 'layouts/errors', obj: @post %>
      <div class="text-center"><%= f.text_area :body %></div>
      <%= f.hidden_field :topic_id %>
      <%= f.hidden_field :customer_id %>
      <div class="text-center"><%= f.submit "コメントする。", class:"btn-gradation" %></div>
    <% end %>
  <% end %>


  </div>
  </div>

</div>