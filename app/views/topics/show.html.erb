<h1>Topics#show</h1>
topic内容<%= @topic.title %>
topic投稿者<%=@topic.customer.nickname%>
<% @posts.each_with_index do |post , idx| %>
  <p>
    <%= idx + 1 %>. <%= post.customer.nickname %> : <%= post.body %>
  </p>
  <%#投稿した人の名前をリンクつけ後から%>
<% end %>

<h3>書き込みする</h3>
<%= form_for @newpost, :url => post_create_path do |f| %>
  <p>本文</p>
  <p><%= f.text_area :body %></p>
  <%= f.hidden_field :topic_id %>
  <%= f.submit %>
<% end %>

