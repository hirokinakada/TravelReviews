<h1>Topics#show</h1>
topic内容<%= @topic.title %>
topic投稿者<%=@topic.customer.nickname%>

<%#エラー文、後から%>

<% @posts.each_with_index do |post , idx| %>
  <p>
    <%= idx + 1 %>. <%= link_to post.customer.nickname, customer_path(post.customer_id)  %> : <%= post.body %>
  </p>
<% end %>
<%#上記のニックネームから他人の編集飛べちゃう。直打ちとその場合の遷移先の設定あとで忘れずに%>



<h3>カキコ！！</h3>
<%= form_for @newpost, :url => post_create_path do |f| %>
  <p>本文</p>
  <p><%= f.text_area :body %></p>
  <%= f.hidden_field :topic_id %>
  <%= f.hidden_field :customer_id %>
  <%= f.submit %>
<% end %>

