<h1>Topics#show</h1>
topic内容<%= @topic.title %>
topic投稿者<%=@topic.customer.nickname%>



<% @posts.each_with_index do |post , idx| %>
  <p>
    <%= idx + 1 %>. <%= link_to post.customer.nickname, customer_path(post.customer_id)  %> : <%= post.body %>
  </p>
  <% if post.customer == current_customer %>
    <%= link_to '[削除]', post_destroy_path(post), method: :delete, data: {confirm: "削除してもよろしいですか？"} %>
  <% end %>

  <% if admin_signed_in? %>
    <%= link_to '[削除]', post_destroy_path(post), method: :delete, data: {confirm: "削除してもよろしいですか？"} %>
  <% end %>

<% end %>
<%#上記のニックネームから他人の編集飛べちゃう。直打ちとその場合の遷移先の設定あとで忘れずに%>


<% if customer_signed_in? %>
<h3>カキコ！！</h3>
<%= form_with model: @post, :url => post_create_path, local: true do |f| %>
<%= render 'layouts/errors', obj: @post %>
  <p>本文</p>
  <p><%= f.text_area :body %></p>
  <%= f.hidden_field :topic_id %>
  <%= f.hidden_field :customer_id %>
  <%= f.submit %>
<% end %>
<% end %>

