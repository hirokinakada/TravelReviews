<%= render 'layouts/errors', obj: @spot %>


<%= form_for (@spot), url: admins_spot_path do |f| %>
    <%= f.label :name, "観光地名" %>
    <%= f.text_field :name %>

    <%= f.label :住所 %>
    <%= f.text_area :address, autofocus: true %>

    <%= f.label :overview, "概要" %>
    <%= f.text_area :overview %>

    <%= f.label :image, "画像"%>
    <%= f.attachment_field :image %>

    <%= f.label :tourist_id, "エリア選択" %>
    <%= f.collection_select :tourist_id, @tourists, :id, :name, include_blank: "選択してください" %>
    
    <%= f.submit "登録" %>

    <% end %>