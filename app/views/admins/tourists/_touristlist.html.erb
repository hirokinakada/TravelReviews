
  <div class="row">
    <div class="col-lg-0 col-md-1 col-sm-0"></div>
    <div class="col-lg-12 col-md-10 col-sm-12">
    <div class="row">
    <% tourists.each do |tourist| %>
      <div class="col-lg-4 col-md-6 col-sm-6">
        <div class="box">


        <div class="text-center"><%= attachment_image_tag(tourist, :image, :fill, 1000, 709, 
              fallback: "noimage.jpg" ,size:'325x230', class:'img') %>
              </div>


        <h3>
        <%= link_to tourist.name, admins_tourist_path(tourist), :style=>"color:gray;" %>
        </h3>
        <span><%= link_to '編集', edit_admins_tourist_path(tourist) ,class:"text-success" %></span>
        </div>
      </div>
    <% end %>
    </div>
    </div>
  </div>
