

<h1 class="headline">エリア登録</h1>
<%= render 'layouts/errors', obj: @tourist %>
<div class="row box">

    <%= form_for (@tourist), url: admins_tourists_path do |f| %>

 
    <div class="col-md-4 col-sm-4">
        <%= f.label :name, "地名" %></br>
        <%= f.text_field :name %></br>

        <%= f.label :overview, "概要" %></br>
        <%= f.text_area :overview %>
    </div>

    <div class="col-md-4 col-sm-4">
        </br><%= f.label :image, "画像" %>
        <%= f.attachment_field :image %>
    </div>

    <div class="col-md-4 col-sm-4">
        </br><%= f.submit "エリア登録", class:"btn-gradation" %>
    <% end %>
    </div>
</div>

<%= render "admins/tourists/touristlist", tourists: @tourists %>


