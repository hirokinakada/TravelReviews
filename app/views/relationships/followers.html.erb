<h1>Follower</h1>


<% @customers.each do |customer| %>
<div class="row box">
        <div class="col-md-3">
			<div>
			    <%= attachment_image_tag(customer, :image, 
                :fill, 1000, 709, fallback: "noimage.jpg", size:'80x80',class:'profile_img') %>
            </div>
        </div>

		<div class="col-md-3">
			<p><%= link_to customer.nickname, customer_path(customer.id) %></p>
		</div>


		<div class="col-md-3">
			<span><%= "フォロー数: #{customer.follower.count}" %></span>
			<span><%= "フォロワー数: #{customer.followed.count}" %></span>
		</div>

		<div class="col-md-3">
			<% if customer_signed_in? %>
        	<% if current_customer.following?(customer) %>
				<span><%= link_to 'フォローを外す', unfollow_path(customer.id), method: :POST %></span>
			<% else %>
			    <span><%= link_to 'フォローをする', follow_path(customer.id), method: :POST %></span>
			<% end %>

			<% else %>
			<span></span>
			<% end %>
		</div>
</div>
<% end %>


