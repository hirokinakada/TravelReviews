<h1>Follower</h1>
<table>
	<tbody>
		<% @customers.each do |customer| %>
		<tr>
			<td><%= attachment_image_tag(customer, :image, :fill, 50, 50, fallback: "noimage.jpg") %></td>

			<td><%= link_to customer.nickname, customer_path(customer.id) %></td>

			<td><%= "フォロー数: #{customer.follower.count}" %></td>
			<td><%= "フォロワー数: #{customer.followed.count}" %></td>

			<td>
            <% if current_customer.following?(customer) %>
				<%= link_to 'フォロー外す', unfollow_path(customer.id), method: :POST %>
			<% else %>
			    <%= link_to 'フォローする', follow_path(customer.id), method: :POST %>
			<% end %>
			</td>
		</tr>
		<% end %>
	</tbody>
</table>
