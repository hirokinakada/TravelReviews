<!DOCTYPE html>
<html>
  <head>
    <title>TravelReviews</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <%= render 'layouts/header' %>
      <div class="wrapper">
        <div class="body">
          <div class="container">

<!--検索-->
<div class="row">
  <div class="col-md-3"></div>
  <div class="col-md-6">
    <div class="row box">
      <div class="col-md-6">
        <%= form_tag(search_path, :method => 'get' , class:"search") do %>
          <%= text_field_tag :search %></br>
          <%= select_tag(:option, 
          options_for_select([["エリアで探す", "1"],["観光名所を探す","2"]]))%>
      </div>
      <div class="col-md-6">
          <%= submit_tag '検索' , class:"btn-gradation"%>
        <% end %>
      </div>
    </div>
  </div>
</div>
<!-- , class: "box" , class:"btn-gradation" -->
            <%= yield %>
          </div>
        </div>
        <%= render 'layouts/footer' %>
      </div>
  </body>
</html>
