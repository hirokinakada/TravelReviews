  <div class="row">
    <% tourists.each do |tourist| %>
      <div class="col-md-4 col-sm-6">

      <%= link_to(tourist_path(tourist), class: '') do %>

        <div class="box">


        <div class="text-center"><%= attachment_image_tag(tourist, :image, :fill, 1000, 709, 
              fallback: "noimage.jpg" ,size:'325x230', class:'img') %>
              </div>

        <h3>
          <%= tourist.name %>
          <i class="fas fa-arrow-right"></i>
        </h3>

        </div>

      <% end %>
      </div>
    <% end %>
  </div>
