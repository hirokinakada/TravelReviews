  <div class="row">
    <% tourists.each do |tourist| %>
      <div class="col-md-4">
        <div class="box">


        <div><%= attachment_image_tag(tourist, :image, :fill, 1000, 709, 
              fallback: "noimage.jpg" ,size:'335x237', class:'img') %>
              </div>


        
        <%= link_to tourist_path(tourist) do %>
        <h3>
          <%= tourist.name %>
          <i class="fas fa-arrow-right"></i>
        </h3>
        <% end %>
        </div>
      </div>
    <% end %>
  </div>
